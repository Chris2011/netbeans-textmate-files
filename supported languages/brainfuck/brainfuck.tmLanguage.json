{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.brainfuck",
    "name": "Brainfuck",
    "comment": "Syntax highlighting support for Brainfuck.",
    "fileTypes": [
        "b",
        "bf"
    ],
    "patterns": [
        {
            "match": "\\[|\\]",
            "name": "keyword.control.brainfuck"
        },
        {
            "match": "<|>",
            "name": "storage.type.brainfuck"
        },
        {
            "match": "\\+|-",
            "name": "keyword.operator.arithmetic.brainfuck"
        },
        {
            "match": "\\.|,",
            "name": "entity.name.function.io.brainfuck"
        },
        {
            "match": "[^+<>\\-\\[\\].,]+",
            "name": "comment.brainfuck"
        }
    ]
}
